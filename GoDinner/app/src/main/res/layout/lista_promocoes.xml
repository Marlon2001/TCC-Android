<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    android:layout_height="148dp"
    android:background="@drawable/border_linearlayout"
    android:paddingTop="6dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:orientation="vertical"
    android:layout_marginEnd="18dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <ImageView
            android:id="@+id/image_produto"
            android:layout_width="match_parent"

            android:scaleType="fitXY"

            android:adjustViewBounds="true"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/lbl_description"
            android:background="@color/Image"/>


    </FrameLayout>

    <TextView
        android:id="@+id/nome_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Combo Burger Jr"
        android:textAlignment="center"
        android:textColor="#444"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:lines="1"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingStart="2dp"
        android:paddingEnd="0dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De: "
            android:textSize="13sp"
            android:textColor="#555"/>
        <TextView
            android:id="@+id/preco_antigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15,00"
            android:layout_marginEnd="6dp"
            android:textSize="13sp"
            android:textColor="#555"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por: R$"
            android:textSize="13sp"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/preco_novo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15,00"
            android:textSize="13sp"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>