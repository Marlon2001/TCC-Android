<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="4dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_produto"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@drawable/img1"
            app:civ_border_width="1dp"
            app:civ_border_color="#999"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/nome_produto"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="COMBO BURGER Jr"
                android:textSize="13sp"
                android:textColor="#444"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/desc_produto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="13sp"
                android:textColor="#666"
                android:layout_marginTop="4dp"
                android:text="1 carne, pão com gergelim, queijo, alface, tomate, cebola, picles, maionese BK® e ketchup"
                android:lines="3"
                android:ellipsize="end"/>
            
            <TextView
                android:id="@+id/preco_produto"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="R$ 15,00"
                android:layout_marginTop="4dp"
                android:textAlignment="viewEnd"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_dark"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"/>
</LinearLayout>