<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        tools:context=".DetalhesPedido">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_back2" />
            <TextView
                android:id="@+id/textView"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="DETALHES DO PEDIDO"
                android:textColor="@color/Dark"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/view2"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:orientation="vertical">
            <View
                android:id="@+id/view"
                android:layout_width="1000dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:background="#a4a2a2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/image_produto"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                app:srcCompat="@drawable/img1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">
            <View
                android:id="@+id/linha2"
                android:layout_width="1000dp"
                android:layout_height="4dp"
                android:layout_marginBottom="8dp"
                android:background="#a4a2a2"/>
            <TextView
                android:id="@+id/text_nome_produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHICKEN Jr"
                android:textAlignment="center"
                android:textColor="@color/Dark"
                android:textSize="25sp" />
            <View
                android:layout_marginTop="15dp"
                android:id="@+id/linha3"
                android:layout_width="1000dp"
                android:layout_height="4dp"
                android:layout_marginBottom="8dp"
                android:background="#a4a2a2"/>
            <TextView
                android:id="@+id/text_descricao_produto"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/Dark"
                android:layout_height="wrap_content"
                android:text="1 carne, pão com gergelim, queijo, alface, tomate, cebola, picles, maionese BK® e ketchup" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <View
                android:layout_marginTop="45dp"
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorProgressBar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_mais_um"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="55dp"
                    android:layout_marginBottom="8dp"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="1dp"
                    app:rippleColor="@color/Dark"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    app:strokeColor="#b3b0b0"
                    app:strokeWidth="2dp" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_total_produtos"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="75dp"
                    android:layout_marginStart="16dp"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="1dp"
                    android:soundEffectsEnabled="false"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:rippleColor="@color/Dark"
                    app:strokeColor="#b3b0b0"
                    app:strokeWidth="2dp" />



                <android.support.design.button.MaterialButton
                    android:id="@+id/btn_menos_um"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginTop="3dp"
                    android:layout_height="55dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="1dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/view4"
                    app:rippleColor="@color/Dark"
                    app:strokeColor="#b3b0b0"
                    app:strokeWidth="2dp" android:layout_marginLeft="15dp"/>

                <android.support.design.button.MaterialButton
                    android:id="@+id/valor_total"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="8dp"
                    android:background="@color/colorProgressBar"
                    android:text="R$ 53.11"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </LinearLayout>

</RelativeLayout>
